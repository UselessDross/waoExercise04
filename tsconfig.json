{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist", // Add this line to specify the output directory
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
